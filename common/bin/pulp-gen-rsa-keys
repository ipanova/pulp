KEY_DIR="/etc/pki/pulp"
KEY_PATH="$KEY_DIR/rsa.key"
KEY_PATH_PUB="$KEY_DIR/rsa_pub.key"

if [ ! -f $KEY_PATH ]
then
  openssl genrsa -out $KEY_PATH 1024 &> /dev/null
  openssl rsa -in $KEY_PATH -pubout > $KEY_PATH_PUB 2> /dev/null
fi